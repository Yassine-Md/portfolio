---
import Layout from '../components/Layout.astro';
import SocialLinks from '../components/SocialLinks.astro';
import Timeline from '../components/Timeline.astro';
import { translations } from '../about_i18n.ts';


export async function getStaticPaths() {
  return [
    { params: { lang: 'fr' } },
    { params: { lang: 'en' } },
    { params: { lang: undefined } }, // la racine /
  ];
}

// Récupération dynamique de la langue depuis l'URL
const langParam = Astro.params.lang;
const lang = ['fr', 'en'].includes(langParam) ? langParam : 'fr';
const t = translations[lang];
---

<Layout lang={lang} t={t}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-indigo-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-indigo-900 pt-8 pb-4">
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
      <div class="mb-4">
        <img 
          src="/images/images.jpeg" 
          alt="Ma photo de profil" 
          class="w-24 h-24 md:w-32 md:h-32 rounded-full mx-auto mb-4 border-4 border-white shadow-2xl dark:border-gray-700 hover:scale-105 transition-transform duration-300"
          onerror="this.src='/images/placeholder-avatar.svg'; this.onerror=null;"
        />
      </div>
      
      <h1 class="text-4xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
        {t.heroTitle}
      </h1>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-6">
        <a href="#about" class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          <span class="mr-2"></span>
          {t.btnDiscover}
        </a>
        <a href="#contact" class="inline-flex items-center px-6 py-3 border-2 border-indigo-600 text-indigo-600 dark:text-indigo-400 rounded-full hover:bg-indigo-600 hover:text-white transition-all duration-300">
          <span class="mr-2"></span>
          {t.btnContact}
        </a>
      </div>
      
      <div class="animate-bounce">
        <a href="#about" class="inline-block text-indigo-600 dark:text-indigo-400">
          <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="bg-white dark:bg-gray-800 pt-2">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-10">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-gray-900 dark:text-white">
          {t.aboutHeading}
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-indigo-600 to-purple-600 mx-auto mb-6"></div>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-12 items-center pb-12">
        <div class="space-y-6">
          {t.aboutParagraphs.map(paragraph => (
            <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">{paragraph}</p>
          ))}
        </div>

        <div class="relative">
          <div class="bg-gradient-to-br from-indigo-100 to-purple-100 dark:from-indigo-900 dark:to-purple-900 rounded-2xl p-8 shadow-xl">
            <h3 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">
              {t.expertiseTitle}
            </h3>
            <div class="space-y-4">
              {t.expertiseItems.map((item, index) => {
                const colors = ['bg-indigo-500', 'bg-purple-500', 'bg-pink-500', 'bg-cyan-500'];
                return (
                  <div class="flex items-center space-x-3">
                    <span class={`w-3 h-3 ${colors[index]} rounded-full`}></span>
                    <span class="text-gray-700 dark:text-gray-300">{item}</span>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section - Padding réduit -->
  <section class="py-8 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold mb-3 text-gray-900 dark:text-white">
          {t.skillsTitle}
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {t.skillsDesc}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white">Langages de programmation</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1 text-sm">
            <li>C</li>
            <li>Python</li>
            <li>Java</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white">Web & Frameworks</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1 text-sm">
            <li>Flask</li>
            <li>Django</li>
            <li>NestJS</li>
            <li>NextJS</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white">Bases de données</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1 text-sm">
            <li>MySQL, PostgreSQL, Oracle</li>
            <li>SQLite, Elasticsearch</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white">Sécurité & Monitoring</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1 text-sm">
            <li>Wireshark, Nmap, Burp Suite</li>
            <li>Snort, TheHive, Syslog</li>
            <li>Grafana, Graylog</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-white">Outils & DevOps</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1 text-sm">
            <li>Docker, Git</li>
            <li>Postman</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section - Padding réduit -->
  <section class="py-8 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-6">
      <Timeline lang={lang} />
    </div>
  </section>

  <!-- Contact Section - Padding réduit -->
  <section id="contact" class="py-8 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold mb-3">{t.contactTitle}</h2>
      <p class="text-base mb-6 max-w-xl mx-auto">{t.contactDesc}</p>
      <SocialLinks />
    </div>
  </section>
</Layout>
