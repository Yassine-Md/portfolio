---
import Layout from '../components/Layout.astro';
import SocialLinks from '../components/SocialLinks.astro';
import Timeline from '../components/Timeline.astro';
import { translations } from '../about_i18n.ts';


export async function getStaticPaths() {
  return [
    { params: { lang: 'fr' } },
    { params: { lang: 'en' } },
    { params: { lang: undefined } }, // la racine /
  ];
}

// R√©cup√©ration dynamique de la langue depuis l'URL
const langParam = Astro.params.lang;
const lang = ['fr', 'en'].includes(langParam) ? langParam : 'fr';
const t = translations[lang];
---

<Layout lang={lang} t={t}>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-indigo-900">
    <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
    <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
      <div class="mb-12">
        <img 
          src="/images/images.jpeg" 
          alt="Ma photo de profil" 
          class="w-32 h-32 md:w-40 md:h-40 rounded-full mx-auto mb-8 border-4 border-white shadow-2xl dark:border-gray-700 hover:scale-105 transition-transform duration-300"
          onerror="this.src='/images/placeholder-avatar.svg'; this.onerror=null;"
        />
      </div>
      
      <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
        {t.heroTitle}
      </h1>
      
      <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 max-w-4xl mx-auto mb-8 leading-relaxed">
        {t.heroDesc}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <a href="#about" class="inline-flex items-center px-8 py-4 bg-indigo-600 text-white rounded-full hover:bg-indigo-700 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          <span class="mr-2"></span>
          {t.btnDiscover}
        </a>
        <a href="#contact" class="inline-flex items-center px-8 py-4 border-2 border-indigo-600 text-indigo-600 dark:text-indigo-400 rounded-full hover:bg-indigo-600 hover:text-white transition-all duration-300">
          <span class="mr-2"></span>
          {t.btnContact}
        </a>
      </div>
      
      <div class="animate-bounce">
        <a href="#about" class="inline-block text-indigo-600 dark:text-indigo-400">
          <svg class="w-8 h-8 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">
          {t.aboutHeading}
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-indigo-600 to-purple-600 mx-auto mb-8"></div>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-6">
          {t.aboutParagraphs.map(paragraph => (
            <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">{paragraph}</p>
          ))}
        </div>

        <div class="relative">
          <div class="bg-gradient-to-br from-indigo-100 to-purple-100 dark:from-indigo-900 dark:to-purple-900 rounded-2xl p-8 shadow-xl">
            <h3 class="text-2xl font-bold mb-6 text-indigo-600 dark:text-indigo-400">
              {t.expertiseTitle}
            </h3>
            <div class="space-y-4">
              <div class="flex items-center space-x-3">
                <span class="w-3 h-3 bg-indigo-500 rounded-full"></span>
                <span class="text-gray-700 dark:text-gray-300">D√©veloppement Web Full-Stack</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="w-3 h-3 bg-purple-500 rounded-full"></span>
                <span class="text-gray-700 dark:text-gray-300">Syst√®mes et R√©seaux</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="w-3 h-3 bg-pink-500 rounded-full"></span>
                <span class="text-gray-700 dark:text-gray-300">Architecture Cloud</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="w-3 h-3 bg-cyan-500 rounded-full"></span>
                <span class="text-gray-700 dark:text-gray-300">DevOps & Automatisation</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900 dark:text-white">
          {t.skillsTitle}
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          {t.skillsDesc}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-3xl mb-4"></div>
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">D√©veloppement</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li>Java (Spring Boot)</li>
            <li>Python (Flask, Django)</li>
            <li>C, Bash</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-3xl mb-4"></div>
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Bases de donn√©es</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li>MySQL, PostgreSQL, Oracle</li>
            <li>SQLite, Elasticsearch</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-3xl mb-4"></div>
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">S√©curit√© & Monitoring</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li>Wireshark, Nmap, Burp Suite</li>
            <li>Snort, TheHive, Syslog</li>
            <li>Grafana, Graylog</li>
          </ul>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="text-3xl mb-4">üîß</div>
          <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Outils & DevOps</h3>
          <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 space-y-1">
            <li>Docker, Git</li>
            <li>Postman</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline Section -->
  <section class="py-20 bg-white dark:bg-gray-800">
    <div class="max-w-6xl mx-auto px-6">
      <Timeline lang={lang} />
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-gradient-to-r from-indigo-600 to-purple-600 text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-6">{t.contactTitle}</h2>
      <p class="text-lg mb-12 max-w-xl mx-auto">{t.contactDesc}</p>
      <SocialLinks />
    </div>
  </section>
</Layout>
