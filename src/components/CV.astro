---
const experiences = [
  {
    title: "Développeur Full Stack",
    company: "Nom Entreprise",
    period: "2023 - Présent",
    description: "Développement d'applications web avec React et Node.js"
  },
  // Ajoutez d'autres expériences
];

const formations = [
  {
    diploma: "Diplôme en Informatique",
    school: "Nom École",
    year: "2022"
  }
  // Ajoutez d'autres formations
];
---

<section class="mb-16">
  <h2 class="text-2xl font-semibold mb-6">Mon Parcours</h2>
  
  <div class="mb-10">
    <h3 class="text-xl font-medium mb-4 text-indigo-600 dark:text-indigo-400">Expériences Professionnelles</h3>
    <div class="space-y-6">
      {experiences.map((exp) => (
        <div class="border-l-4 border-indigo-400 pl-4">
          <h4 class="font-bold">{exp.title}</h4>
          <p class="text-gray-600 dark:text-gray-400">{exp.company} • {exp.period}</p>
          <p class="mt-2">{exp.description}</p>
        </div>
      ))}
    </div>
  </div>

  <div>
    <h3 class="text-xl font-medium mb-4 text-indigo-600 dark:text-indigo-400">Formation</h3>
    <div class="space-y-4">
      {formations.map((form) => (
        <div>
          <h4 class="font-bold">{form.diploma}</h4>
          <p class="text-gray-600 dark:text-gray-400">{form.school} • {form.year}</p>
        </div>
      ))}
    </div>
  </div>
</section>
